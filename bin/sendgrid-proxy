#!/usr/bin/env node

const ora = require('ora');
const dotenv = require('dotenv');
const proxy = require('../');
const core = proxy.core;

let CORE;

dotenv.config();
if (process.env.SENDGRID_API_ID && process.env.PORT)
{
	CORE = new core(
	{
		spinner: new ora()
	});
	CORE.run(
	{
		apiId: process.env.SENDGRID_API_ID,
		port: process.env.PORT
	});
}
else
{
	process.exit(1);
}
